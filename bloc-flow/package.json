{
  "name": "bloc-flow",
  "displayName": "bloc_flow",
  "description": "bloc flow",
  "version": "0.0.2",
  "publisher": "HoDoan",
  "engines": {
    "vscode": "^1.76.0"
  },
  "bugs": {
    "url": "https://github.com/DoanpPhiHo/vs_bloc_extension/issues",
    "email": "hodoan.it.dev@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DoanpPhiHo/vs_bloc_extension"
  },
  "homepage": "https://github.com/DoanpPhiHo/vs_bloc_extension",
  "categories": [
    "Snippets",
    "Programming Languages"
  ],
  "activationEvents": [],
  "icon": "assets/logo.png",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Page",
        "properties": {
          "bloc-flow.newPageTemplate.createDirectory": {
            "type": "boolean",
            "default": true,
            "description": "Whether to create a bloc directory when creating a new bloc."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "bloc-flow.new_page",
        "title": "New Page"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "bloc-flow.new_page",
          "group": "blocFlow@1",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/change-case": "^2.3.1",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.192",
    "@types/mkdirp": "^2.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "lodash": "^4.17.21",
    "mkdirp": "^2.1.6"
  }
}
